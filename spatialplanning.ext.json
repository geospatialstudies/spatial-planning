{
  "type": "CityJSONExtension",
  "name": "SpatialPlanning",
  "description": "Extension to model the spatial planning",
  "uri": "https://raw.githubusercontent.com/geospatialstudies/spatial-planning/main/spatialplanning.ext.json",
  "version": "0.1",
  "versionCityJSON": "1.1",
  "extraRootProperties": {},     
  "extraAttributes": {},
  "extraCityObjects": {
  
	"+PlanGroup": {
      "allOf": [
        { "$ref": "cityobjects.schema.json#/_AbstractCityObject" },
        {
          "properties": {
            "type": { "enum": [ "+PlanGroup" ] },
            "attributes": {
              "type": "object",
              "properties": {
                "hierarchyLevel": { "type": "integer" },
				"label": { "type": "string" },
				"pgID": { "type": "string" }
                
              }
            },
            
            "geometry": {
              "type": "array",
              "items": {
                 "oneOf": [
                {
                  "$ref": "geomprimitives.schema.json#/MultiLineString"
                },
                {
                  "$ref": "geomprimitives.schema.json#/MultiSurface"
                },
                {
                  "$ref": "geomprimitives.schema.json#/CompositeSurface"
                },
                {
                  "$ref": "geomprimitives.schema.json#/Solid"
                },
                {
                  "$ref": "geomprimitives.schema.json#/CompositeSolid"
                },
                {
                  "$ref": "geomprimitives.schema.json#/MultiSolid"
                }
               
              ]
              }
            }
          },
          "required": [ "type", "geometry" ]
        }
      ]
    },
	
	"+PlanBlock": {
      "allOf": [
        { "$ref": "cityobjects.schema.json#/_AbstractCityObject" },
        {
          "properties": {
            "type": { "enum": [ "+PlanBlock" ] },
            "attributes": {
              "type": "object",
              "properties": {
                "blockName": { "type": "string" },
				"constraintDescription": { "type": "string" },
				"constraintName": { "type": "string" },
				"easementType": { "type": "string" },
				"functionType": { "type": "string" },
				"naturalRiskSafetyArea": { "type": "string" },
				"pbID": { "type": "string" },
				"protectedSite": { "type": "string" },
				"restrictionZone": { "type": "string" }
                
              }
            },
            
            "geometry": {
              "type": "array",
              "items": {
                 "oneOf": [
                {
                  "$ref": "geomprimitives.schema.json#/MultiLineString"
                },
                {
                  "$ref": "geomprimitives.schema.json#/MultiSurface"
                },
                {
                  "$ref": "geomprimitives.schema.json#/CompositeSurface"
                },
                {
                  "$ref": "geomprimitives.schema.json#/Solid"
                },
                {
                  "$ref": "geomprimitives.schema.json#/CompositeSolid"
                },
                {
                  "$ref": "geomprimitives.schema.json#/MultiSolid"
                }
               
              ]
              }
            }
          },
          "required": [ "type", "parents", "geometry" ]
        }
      ]
    },
	
	"+PlanUnit": {
      "allOf": [
        { "$ref": "cityobjects.schema.json#/_AbstractCityObject" },
        {
          "properties": {
            "type": { "enum": [ "+PlanUnit" ] },
            "attributes": {
              "type": "object",
              "properties": {
                "area": { "type": "number" },
				"buildingIndications": { "type": "string" },
				"easement": { "type": "string" },
				"heightIndications": { "type": "string" },
				"otherConstructionIndications": { "type": "string" },
				"otherDimesionIndications": { "type": "string" },
				"permitType": { "type": "string" },
				"puID": { "type": "string" },
				"shapeIndications": { "type": "string" },
				"statusType": { "type": "string" },
				"surfaceIndications": { "type": "string" },
				"surfaceRelation": { "type": "string" },
				"unitIndications": { "type": "integer" },
				"volume": { "type": "number" },
				"volumeIndications": { "type": "string" },
				"zoningName": { "type": "string" },
				"zoningType": { "type": "string" }
                
              }
            },
            
            "geometry": {
              "type": "array",
              "items": {
                 "oneOf": [
                {
                  "$ref": "geomprimitives.schema.json#/MultiLineString"
                },
                {
                  "$ref": "geomprimitives.schema.json#/MultiSurface"
                },
                {
                  "$ref": "geomprimitives.schema.json#/CompositeSurface"
                },
                {
                  "$ref": "geomprimitives.schema.json#/Solid"
                },
                {
                  "$ref": "geomprimitives.schema.json#/CompositeSolid"
                },
                {
                  "$ref": "geomprimitives.schema.json#/MultiSolid"
                }
               
              ]
              }
            }
          },
          "required": [ "type", "parents", "geometry" ]
        }
      ]
    }
    
  
  }	  
	  
  }
